<div class="grid_6">
	<div class="chunkybox">
		<div class='boxheader'>
	   		<h2><%= image_tag "icons/star_fill.png", :title => "star" %>
			Highly reviewed places</h2>
		</div>
		<table>
			<% @places.each do |place| %>
			<tr>
				<td><%= link_to place.name, "/places/#{place.wdpa_id}/all_reviews" %></td>
				<td><%= "*" * place.avg_rating %><%= place.avg_rating %> (<%= place.review_count %>)</td>
			    <!-- <td><%= place.name %></td>
			    <td><%= place.wdpa_id %></td>
				<td><%= link_to 'Reviews', "/places/#{place.id}/all_reviews" %></td>
			    <td><%= link_to 'Show', place %></td>
			    <td><%= link_to 'Edit', edit_place_path(place) %></td>
			    <td><%= link_to 'Destroy', place, :confirm => 'Are you sure?', :method => :delete %></td> -->

			  </tr>
			<% end %>  
		</table>
		<p >(Number of reviews in brackets)</p>   
		<br/>   

	</div>    		
	<div class="chunkybox">
			<h2>
				<%= image_tag "icons/search.png", :title => "search" %>
				Search sites to add a new review
			</h2>

			<div id="search">
			  <%= render :partial => 'places/search' %>
			</div>

			<!-- <br/><%= link_to "Add new review!", new_review_path %> -->
			</br/>
			<!-- <%= link_to 'New Place', new_place_path %> -->
	</div>

</div>

<div class="grid_6">
	<div class="chunkybox">
		<h2>
			<%= image_tag "icons/graph_up.png", :title => "people" %>
			Most prolific reviewers
		</h2>
		<% @reviewers.each do |reviewer| %>	
			<div><%= link_to reviewer.username, user_path(reviewer.id) %> - <%= reviewer.reviews.count %> reviews</div>
		<% end %>	
	</div>    
	<div class="chunkybox">
		<h2>
			<%= image_tag "icons/new.png", :title => "new" %>
			Most recently updated reviews </h2> 
		<% @recent_reviews.each	do |recent| %>
			<div><%= link_to recent.place.name, review_path(recent.id) %>
				<%= "*" * recent.rating %>
		<% end %>
	</div>
</div>

