<div class="grid_6">  
	<div class="chunkybox">
		<h2>
			<%= image_tag "icons/pile.png", :title => "pile" %>
			Here are the reviews for <em><%= @reviews.first.place.name %></em>
		</h2>
		<% @reviews.each do |review| %>
			<div>
				<%= link_to review.review_text, review %>
				<%= "*" * review.rating %>
				(by <%= link_to review.user.username, user_path(review.user) %>)
			</div>
		<% end %>
		<br/>
		<em>
			<%= image_tag "icons/plus_sm.png", :title => "add new" %>
			<%= link_to "Add new review for this site", "/reviews/new/#{@reviews.first.place.wdpa_id}" %><br/>
		</em>
		<em>
			<%= image_tag "icons/open_sm.png", :title => "open" %>
			<%= link_to "Open in ProtectedPlanet", "http://protectedplanet.net/sites/#{@reviews.first.place.wdpa_id}" %>
		</em>
	</div>

	<div class="chunkybox">
		<h2>
			<%= image_tag "icons/pic.png", :title => "pic" %>
			Content linked to this place
		</h2>
	</div>
</div>

<div class="grid_6">
	<%= render 'places/map' %>
</div>